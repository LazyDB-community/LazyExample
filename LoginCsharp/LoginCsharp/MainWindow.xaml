<Window x:Class="LoginCsharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginCsharp"
        mc:Ignorable="d"
        Title="Login example" Height="450" Width="800">
    <Grid>
        <Label Content="Email&#xD;&#xA;" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="138"/>
        <TextBox x:Name="email" HorizontalAlignment="Left" Height="32" Margin="10,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="430"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Height="32" Margin="10,103,0,0" VerticalAlignment="Top" Width="430"/>
        <Label Content="Password&#xA;" HorizontalAlignment="Left" Height="40" Margin="10,74,0,0" VerticalAlignment="Top" Width="138"/>
        <Button Content="Login" HorizontalAlignment="Left" Height="42" Margin="10,151,0,0" VerticalAlignment="Top" Width="166" FontSize="22" Click="connect"/>

    </Grid>
</Window>
